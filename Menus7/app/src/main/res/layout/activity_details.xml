<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whitem"
    android:padding="16dp"
    tools:context=".DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <!-- Title -->
        <TextView
            android:id="@+id/details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Your Mode of Transport"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Transport List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/transport_card" android:id="@+id/card_plane"/>
            <include layout="@layout/transport_card" android:id="@+id/card_train"/>
            <include layout="@layout/transport_card" android:id="@+id/card_bus"/>
            <include layout="@layout/transport_card" android:id="@+id/card_bike"/>
            <include layout="@layout/transport_card" android:id="@+id/card_ship"/>
            <include layout="@layout/transport_card" android:id="@+id/card_car"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_book_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Now"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>


        <Button
            android:id="@+id/btn_back_to_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:text="Back"
            android:padding="12dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>
