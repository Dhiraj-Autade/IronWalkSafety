<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/snowbg"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Floating Action Button -->

    <!-- ProgressBar (Hidden initially) -->


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_gravity="end|top"
        android:layout_margin="10dp"
        android:contentDescription="Information Button"
        android:src="@android:drawable/ic_dialog_email"
        app:backgroundTint="@android:color/white"
        app:maxImageSize="25dp"
        app:tint="@android:color/black" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <!-- WebView (Takes Half of the Screen) -->
    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom Half (Buttons + VideoView) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <!-- First Button -->
        <Button
            android:id="@+id/btn_next_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modes of Travel"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:padding="10dp" />

        <!-- Second Button -->
        <Button
            android:id="@+id/btn_destination_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Destination List"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"
            android:padding="10dp" />


        <!-- VideoView -->
        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</LinearLayout>
